package com.avito.notification.config;

import org.springframework.context.annotation.Configuration;
import org.springframework.web.servlet.config.annotation.CorsRegistry;
import org.springframework.web.servlet.config.annotation.WebMvcConfigurer;
import org.springframework.web.servlet.config.annotation.WebMvcRegistrations;

@Configuration
public class MyWebMvcConfigurer implements WebMvcConfigurer, WebMvcRegistrations {
    @Override
    public void addCorsMappings(CorsRegistry registry) {
        registry.addMapping("/api/**")
            .allowedOrigins("http://localhost:4200")
            .allowedMethods("*")
            .allowedHeaders("*")
            .allowCredentials(false)
            .maxAge(3600);
    }

    @Override
    public WebMvcRegistrations getWebMvcRegistrations() {
        return new WebMvcRegistrations() {
            @Override
            public WebMvcConfigurer getConfiguration() {
                return new MyWebMvcConfigurer();
            }
        };
    }
}